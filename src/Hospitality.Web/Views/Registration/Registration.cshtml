@model RegistrationPatientModel
<head>
    <link rel="stylesheet" href="~/css/Registration.css" asp-append-version="true" />
</head>

<content>
                <div id="registrationForm">
                @using(Html.BeginForm("RegistrationPost", "Registration", FormMethod.Post))
                {

                    <h2>Patient register form</h2>

                    <div>                    
                        <p>
                            <label id="nameLabel" for="">Name</label><br>
	                        @Html.TextBoxFor(x => x.name, new { Value =  TempData["Name"] })

                        </p>
                        <p>
                            <label id="surnameLabel" for="">Surname</label><br>
                             @Html.TextBoxFor(x => x.surname, new { style="width:100%;", @Value = @Model.surname.ToString() })
                        </p>
                        <p>
                            <label id="peselLabel" for="">Pesel or Passport number</label>
                            @Html.TextBoxFor(x => x.pesel, new { style="width:100%;" })
                                                    </p>
                        <p>
                            <label id="dateOfBirthLabel" for="">Date of birth</label><br>
                            @Html.EditorFor(x => x.date, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @min= "1900-01-01", @max= DateTime.Today.ToString("yyyy'-'MM'-'dd")}})

                        </p>
                        <p>
                            <label id="addressLabel" for="">Address</label><br>
                             @Html.TextBoxFor(x => x.address, new { style="width:100%;" })
                        </p>
                        <p>
                            <label id="phoneNumberLabel" for="">Phone number</label><br>
                             @Html.TextBoxFor(x => x.phoneNumber, new { style="width:100%;" })
                            <br>
                        </p>
                        <p>
                            @Html.DropDownListFor(m => m.specialist, new SelectList(Enum.GetValues(typeof(SpecialistEnum))), "--Select Specialist--", new { style="font-size:120%;"})
                        </p>
        

                        <p>
                             <label id="insuranceLabel" for="">Health Insurance</label><br>
                             <label id="insuranceValue" for="">No check</label>
                             <button id="insuranseButton" type="button" class="btn btn-primary"> Check </button>
                            
                              
                        </p>

                     </div><br>
                        <p class="buttons">
                                    <button id="sendButton" type="submit" class="btn btn-primary"> Book visit  </button>
                        </p>
        }

         

    </div>

</content>


@section Scripts {

        <script>
     $("#insuranseButton").on('click',function(){
         document.getElementById('insuranceValue').innerHTML = 'Yes';      });
        </script>
    }
    
}
